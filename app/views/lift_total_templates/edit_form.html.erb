<h1>
  Edit lift total #<%= @lift_total.id %>
</h1>

<hr>

<form action="/update_lift_total/<%= @lift_total.id %>" method="post">

  <div class="form-group">
    <label for="profile_id">
      Profile
    </label>

    <%= select_tag(:profile_id, options_from_collection_for_select(Profile.all, :id, :user_id, @lift_total.profile_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="weight">
      Weight
    </label>

    <input type="text" id="weight" name="weight" class="form-control" value="<%= @lift_total.weight %>">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @lift_total.date %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update lift total
  </button>
</form>

<hr>

<a href="/lift_totals">
  Go back
</a>
