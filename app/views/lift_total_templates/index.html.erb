<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All lift totals
    </h1>

    <a href="/lift_totals/new" class="btn btn-block btn-outline-secondary">
      Add a new lift total
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Profile
        </th>

        <th>
          Weight
        </th>

        <th>
          Date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @lift_totals.each do |lift_total| %>
      <tr>
        <!-- Display lift_total.id start -->
        <td>
          <%= lift_total.id %>
        </td>
        <!-- Display lift_total.id end -->

        <!-- Display lift_total.profile_id start -->
        <td>
          <%= lift_total.profile.user_id %>
        </td>
        <!-- Display lift_total.profile_id end -->

        <!-- Display lift_total.weight start -->
        <td>
          <%= lift_total.weight %>
        </td>
        <!-- Display lift_total.weight end -->

        <!-- Display lift_total.date start -->
        <td>
          <%= lift_total.date %>
        </td>
        <!-- Display lift_total.date end -->

        <!-- Display lift_total.created_at start -->
        <td>
          <%= time_ago_in_words(lift_total.created_at) %> ago
        </td>
        <!-- Display lift_total.created_at end -->

        <!-- Display lift_total.updated_at start -->
        <td>
          <%= time_ago_in_words(lift_total.updated_at) %> ago
        </td>
        <!-- Display lift_total.updated_at end -->

        <td>
          <a href="/lift_totals/<%= lift_total.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @lift_totals, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
