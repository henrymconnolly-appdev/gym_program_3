<% if @lift_total.present? %>
  <% if @lift_total.errors.any? %>
    <% @lift_total.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new lift total
</h1>


<hr>

<form action="/create_lift_total" method="post">

  <div class="form-group">
    <label for="profile_id">
      Profile
    </label>

    <%= select_tag(:profile_id, options_from_collection_for_select(Profile.all, :id, :user_id, @lift_total.profile_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="weight">
      Weight
    </label>

    <input type="text" id="weight" name="weight" class="form-control" value="<%= @lift_total.weight %>">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @lift_total.date %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create lift total
  </button>
</form>

<hr>

<a href="/lift_totals">
  Go back
</a>
