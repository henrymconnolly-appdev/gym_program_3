<h1>
  Edit feed #<%= @feed.id %>
</h1>

<hr>

<!-- Form feed start -->
<form action="/update_feed/<%= @feed.id %>" method="post">
<!-- Form feed end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @feed.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update feed
  </button>
</form>

<hr>

<a href="/feeds">
  Go back
</a>
