<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All feeds
    </h1>

    <a href="/feeds/new" class="btn btn-block btn-outline-secondary">
      Add a new feed
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "feed_templates/feeds_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @feeds.each do |feed| %>
      <tr>
        <td>
          <%= feed.id %>
        </td>

        <td>
          <% if feed.user.present? %>
            <a href="/users/<%= feed.user.id %>">
              <%= feed.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(feed.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(feed.updated_at) %> ago
        </td>

        <td>
          <a href="/feeds/<%= feed.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @feeds, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
