<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All feeds
    </h1>

    <a href="/feeds/new" class="btn btn-block btn-outline-secondary">
      Add a new feed
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @feeds.each do |feed| %>
      <tr>
        <!-- Display feed.id start -->
        <td>
          <%= feed.id %>
        </td>
        <!-- Display feed.id end -->

        <!-- Display feed.user_id start -->
        <td>
          <%= feed.user.email %>
        </td>
        <!-- Display feed.user_id end -->

        <!-- Display feed.created_at start -->
        <td>
          <%= time_ago_in_words(feed.created_at) %> ago
        </td>
        <!-- Display feed.created_at end -->

        <!-- Display feed.updated_at start -->
        <td>
          <%= time_ago_in_words(feed.updated_at) %> ago
        </td>
        <!-- Display feed.updated_at end -->

        <td>
          <a href="/feeds/<%= feed.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @feeds, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
