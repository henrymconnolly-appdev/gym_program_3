<!-- Form subscription start -->
<form action="/create_subscription_from_feed" method="post">
<!-- Form subscription end -->

  <!-- Label and input for feed_id start -->
  <!-- Input for feed_id start -->
  <input type="hidden" name="feed_id" value="<%= @feed.id %>">
  <!-- Input for feed_id end -->

  <!-- Label and input for profile_id start -->
  <div class="form-group">
    <label for="profile_id">
      Profile
    </label>

    <!-- Input for profile_id start -->
    <%= select_tag(:profile_id, options_from_collection_for_select(Profile.all, :id, :user_id, @subscription.profile_id), :class => "form-control") %>
    <!-- Input for profile_id end -->
  </div>
  <!-- Label and input for profile_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create subscription
  </button>
</form>
