<h1>
  Add a new profile
</h1>


<hr>

<!-- Form profile start -->
<form action="/create_profile" method="post">
<!-- Form profile end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @profile.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create profile
  </button>
</form>

<hr>

<a href="/profiles">
  Go back
</a>
