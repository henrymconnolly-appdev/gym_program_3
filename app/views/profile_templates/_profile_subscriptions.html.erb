<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Subscriptions

    <a data-toggle="collapse" href="#profile_subscriptions_new_form">
      Add subscription
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @profile.subscriptions.each do |subscription| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/subscriptions/<%= subscription.id %>">
          <%= subscription.created_at %>
        </a>

        <a href="/delete_subscription_from_profile/<%= subscription.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="profile_subscriptions_new_form">
        <%= render partial: "profile_templates/profile_subscriptions_new_form" %>
      </div>
    </div>

  </ul>
</div>
