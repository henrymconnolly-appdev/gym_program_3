<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All profiles
    </h1>

    <a href="/profiles/new" class="btn btn-block btn-outline-secondary">
      Add a new profile
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "profile_templates/profiles_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @profiles.each do |profile| %>
      <tr>
        <td>
          <%= profile.id %>
        </td>

        <td>
          <% if profile.user.present? %>
            <a href="/users/<%= profile.user.id %>">
              <%= profile.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(profile.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(profile.updated_at) %> ago
        </td>

        <td>
          <a href="/profiles/<%= profile.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @profiles, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
