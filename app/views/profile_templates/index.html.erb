<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All profiles
    </h1>

    <a href="/profiles/new" class="btn btn-block btn-outline-secondary">
      Add a new profile
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @profiles.each do |profile| %>
      <tr>
        <!-- Display profile.id start -->
        <td>
          <%= profile.id %>
        </td>
        <!-- Display profile.id end -->

        <!-- Display profile.user_id start -->
        <td>
          <%= profile.user.email %>
        </td>
        <!-- Display profile.user_id end -->

        <!-- Display profile.created_at start -->
        <td>
          <%= time_ago_in_words(profile.created_at) %> ago
        </td>
        <!-- Display profile.created_at end -->

        <!-- Display profile.updated_at start -->
        <td>
          <%= time_ago_in_words(profile.updated_at) %> ago
        </td>
        <!-- Display profile.updated_at end -->

        <td>
          <a href="/profiles/<%= profile.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
