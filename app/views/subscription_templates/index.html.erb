<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All subscriptions
    </h1>

    <a href="/subscriptions/new" class="btn btn-block btn-outline-secondary">
      Add a new subscription
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Feed
        </th>

        <th>
          Profile
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @subscriptions.each do |subscription| %>
      <tr>
        <!-- Display subscription.id start -->
        <td>
          <%= subscription.id %>
        </td>
        <!-- Display subscription.id end -->

        <!-- Display subscription.feed_id start -->
        <td>
          <%= subscription.feed.user_id %>
        </td>
        <!-- Display subscription.feed_id end -->

        <!-- Display subscription.profile_id start -->
        <td>
          <%= subscription.profile_id %>
        </td>
        <!-- Display subscription.profile_id end -->

        <!-- Display subscription.created_at start -->
        <td>
          <%= time_ago_in_words(subscription.created_at) %> ago
        </td>
        <!-- Display subscription.created_at end -->

        <!-- Display subscription.updated_at start -->
        <td>
          <%= time_ago_in_words(subscription.updated_at) %> ago
        </td>
        <!-- Display subscription.updated_at end -->

        <td>
          <a href="/subscriptions/<%= subscription.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
