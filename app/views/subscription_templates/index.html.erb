<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All subscriptions
    </h1>

    <a href="/subscriptions/new" class="btn btn-block btn-outline-secondary">
      Add a new subscription
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "subscription_templates/subscriptions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Feed
        </th>

        <th>
          Profile
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @subscriptions.each do |subscription| %>
      <tr>
        <td>
          <%= subscription.id %>
        </td>

        <td>
          <% if subscription.feed.present? %>
            <a href="/feeds/<%= subscription.feed.id %>">
              <%= subscription.feed.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if subscription.profile.present? %>
            <a href="/profiles/<%= subscription.profile.id %>">
              <%= subscription.profile.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(subscription.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(subscription.updated_at) %> ago
        </td>

        <td>
          <a href="/subscriptions/<%= subscription.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @subscriptions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
