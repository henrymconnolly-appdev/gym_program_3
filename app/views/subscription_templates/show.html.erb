<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Subscription #<%= @subscription.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/subscriptions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/subscriptions/<%= @subscription.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit subscription
        </a>
      </div>

      <div class="col">
        <a href="/delete_subscription/<%= @subscription.id %>" class="btn btn-block btn-outline-secondary">
          Delete subscription
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Feed
      </dt>
      <dd>
        <% if @subscription.feed.present? %>
          <a href="/feeds/<%= @subscription.feed_id %>">
            <%= @subscription.feed.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Profile
      </dt>
      <dd>
        <% if @subscription.profile.present? %>
          <a href="/profiles/<%= @subscription.profile_id %>">
            <%= @subscription.profile.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@subscription.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@subscription.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

