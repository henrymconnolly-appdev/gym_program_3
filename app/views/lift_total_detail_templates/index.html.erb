<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All lift total details
    </h1>

    <a href="/lift_total_details/new" class="btn btn-block btn-outline-secondary">
      Add a new lift total detail
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "lift_total_detail_templates/lift_total_details_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Lift total
        </th>

        <th>
          Squat
        </th>

        <th>
          Bench
        </th>

        <th>
          Deadlift
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @lift_total_details.each do |lift_total_detail| %>
      <tr>
        <td>
          <%= lift_total_detail.id %>
        </td>

        <td>
          <% if lift_total_detail.lift_total.present? %>
            <a href="/lift_totals/<%= lift_total_detail.lift_total.id %>">
              <%= lift_total_detail.lift_total.profile_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= lift_total_detail.squat %>
        </td>

        <td>
          <%= lift_total_detail.bench %>
        </td>

        <td>
          <%= lift_total_detail.deadlift %>
        </td>

        <td>
          <%= time_ago_in_words(lift_total_detail.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(lift_total_detail.updated_at) %> ago
        </td>

        <td>
          <a href="/lift_total_details/<%= lift_total_detail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @lift_total_details, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
